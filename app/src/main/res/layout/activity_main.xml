<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Mr. Potato Head"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/potato"
        android:layout_width="370dp"
        android:layout_height="353dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:src="@drawable/body" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/shoes" />

        <ImageView
            android:id="@+id/arms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/arms" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/ears" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/mouth" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/eyes"/>

        <ImageView
            android:id="@+id/eyebrows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/mustache"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/mustache" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/nose" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/hat"/>

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:src="@drawable/glasses"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="205dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/arms_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arms" />

            <CheckBox
                android:id="@+id/ears_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ears" />

            <CheckBox
                android:id="@+id/eyebrows_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eyebrows" />

            <CheckBox
                android:id="@+id/glasses_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glasses" />

            <CheckBox
                android:id="@+id/mouth_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mouth" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/mustache_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mustache" />

            <CheckBox
                android:id="@+id/shoes_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shoes" />

            <CheckBox
                android:id="@+id/hat_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hat" />

            <CheckBox
                android:id="@+id/nose_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nose" />

            <CheckBox
                android:id="@+id/eyes_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eyes" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>